
@model Favorite

<h2>Delete favorite</h2>

<h3>Are you sure you want to delete this favorite?</h3>
<div>
    <h4>Favorite</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Favorite Id</dt>
        <dd class="col-sm-10">@Model.FavoriteId</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Pin.Name</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Category</dd>

        <dt class="col-sm-2">Pin made by:</dt>
        <dd class="col-sm-10">@Model.MadeBy</dd>

        <dt class="col-sm-2">Image URL</dt>
        <dd class="col-sm-10">@Model.Pin.ImageUrl</dd>
    </dl>
    <form asp-action="DeleteConfirmed" asp-route-id="@Model.FavoriteId" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Table" asp-controller="Pin" class="btn btn-secondary">Cancel</a>
    </form>
</div>