@using Microsoft.AspNetCore.Identity
@using PinThePlace.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    // header for signed in user that is admin
    @if (User.IsInRole("Admin")){
    <li class="nav-item">
        <p id="manage" class="nav-link text-dark" style="font-weight: normal;" asp-area="Identity" title="Manage">Hello @UserManager.GetUserName(User)!</p>
    </li>
     <li class="nav-item">
        <a class="nav-link text-dark" style="font-weight: normal;"asp-controller="Pin" asp-action="Table">Home</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" style="font-weight: normal;"asp-controller="Home" asp-action="Index">About</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">Logout</button>
        </form>
    </li>
     <li class="nav-item">
        <a class="nav-link text dark" style="font-weight: normal;" asp-asp-area="" asp-controller="User" asp-action="Table">Users</a>
    </li>

    // header for signed in user
    } else{
        <li class="nav-item">
        <span class="nav-link text-dark" style="pointer-events: none;">Hello @UserManager.GetUserName(User)!</span>
    
    </li>
        <li class="nav-item">
        <a class="nav-link text-dark" style="font-weight: normal;"asp-controller="Pin" asp-action="Table">Home</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" style="font-weight: normal;"asp-controller="Home" asp-action="Index">About</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">Logout</button>
        </form>
    </li>
    }
}
else
{   // header for not being logged in
    <li class="nav-item">
        <a class="nav-link text-dark" style="font-weight: normal;"asp-controller="Pin" asp-action="Table">Home</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" style="font-weight: normal;"asp-controller="Home" asp-action="Index">About</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
    
}
</ul>
