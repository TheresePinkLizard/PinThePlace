@model PinsViewModel


<div class="container">
    <div class="row">
        
        <!-- første kolonne -->

        <div class="col-md-6">
            <h3>Find your place</h3>
            <!--inputing google maps-->
            <div id="map" style="height: 500px; width: 100%;"></div>
            <!--temporary picture-->

            <!--- <img src="~/images/map.png" alt="Map Image"> -->
                 <p>
             <!--Mekanisme for å lage ny data entry CRUD-->
            <a id="add_a_pin" class="btn btn-secondary"
                asp-controller="Pin"
                asp-action="Create"> Add a pin</a>
        </p>
        </div>

        <!--andre kolonne-->

        <div class="col-md-6">
            <!--lenker til feed og mypins-->
            <div>
                <button id="showFeedWindow" class="btn btn-primary btn-lg">Feed</button>
                <button id="showFavWindow" class="btn btn-secondary btn-lg">My Pins</button>
            </div>
            <!--Feed vindu-->
            <div id="feedwindow" class="contentwindow">
                <partial name="_AdminFeed" model="Model.Pins"/>
            </div>
            <!--mypins vindu-->
            <div id="favwindow" class="contentwindow" style="display: none;">
                <partial name="_MyPins" model="Model.Pins"/>
            </div>
        </div>
    </div>
</div>
<script src="~/js/jquery.min.js"></script>
<script src="~/js/bootstrap.min.js"></script>

<script>
    // javascript kode for å kunne bytte mellom vinduer
$(document).ready(function(){
    $("#showFeedWindow").click(function(e){
        e.preventDefault();
        $(this).removeClass('btn-secondary').addClass('btn-primary');
        $('#showFavWindow').removeClass('btn-primary').addClass('btn-secondary');
        $("#feedwindow").show();
        $("#favwindow").hide();
    });

    $("#showFavWindow").click(function(e){
       e.preventDefault();
        $(this).removeClass('btn-secondary').addClass('btn-primary');
        $('#showFeedWindow').removeClass('btn-primary').addClass('btn-secondary');
        $("#favwindow").show();
        $("#feedwindow").hide();
    });
});

