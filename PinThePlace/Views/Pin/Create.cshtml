<h2>Create New Pin</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name"></label><span class="text-danger">*</span> <!--The asp-for attribute is a tag helper in ASP.NET Core that helps with model binding and validation. It is used to associate a form input element with a specific property of the model class-->
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span> <!--Vertifiserer bruker sitt input mot Item Model. defined by Models/Item.cs-->
    </div>

     <div class="form-group">
    <label asp-for="Rating"></label><span>(1-5)</span><span class="text-danger">*</span>
    </span>
    <input asp-for="Rating" type="number" min="1" max="5" class="form-control"/>
    </select>
    <span asp-validation-for="Rating" class="text-danger"></span>
    </div>
     <div class="form-group">
        <label asp-for="Comment"></label> <!--Other properties like Description and ImageUrl are allowed to be empty since they are nullable-->
        <input asp-for="Comment" class="form-control"/>
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>
     <div class="form-group">
        <input asp-for="ImageUrl" type="hidden"/>
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UploadedImage">Upload photo:</label>
        <input asp-for="UploadedImage" type="file" accept="image/*" />
        <span asp-asp-validation-for="UploadedImage" class="text-danger"></span>

    </div>

    <div class ="form-group">
        <label asp-for="Latitude"></label>
        <input asp-for="Latitude" class="form-control" readonly />
        <span asp-validation-for="Latitude" class="text-danger"></span>

    </div>
    <div class ="form-group">
        <label asp-for="Longitude"></label>
        <input asp-for="Longitude" class="form-control" readonly/>
        <span asp-validation-for="Longitude" class="text-danger"></span>
    </div>

   <div id="latitude_display"></div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Table" class="btn btn-secondary">Back to Table View</a>
</form>
